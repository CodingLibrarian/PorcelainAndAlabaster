        <li>18</li>
        <li>19</li>
        <li>20</li>
        <li>21</li>
        <li>22</li>
        <li>23</li>
        <li>24</li>
        <li>25</li>
        <li>26</li>
        <li>27</li>
        <li>28</li>
        <li class="@Html.Raw((isFeb && isLeapYear) || !isFeb ? "" : "hidden")">29</li>
        <li class="@Html.Raw(!isFeb ? "" : "hidden")">30</li>
        <li class="@Html.Raw(is31Month ? "" : "hidden")">31</li>
    </ul>
</div>