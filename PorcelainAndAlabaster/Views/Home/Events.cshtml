@{
    //TODO: Build a reader for image links and alt text editor with default
    ViewData["Title"] = "Events";
    List<LibraryEvent> CurrentEvents = ViewBag.LibraryEvents;
}
<h1>Events</h1>
<div id="event-carousel-container">
    <div class="carousel-item-view">
         @if (CurrentEvents != null || CurrentEvents?.Count != 0)
        {
            int currentEventCount = 0;
            foreach (var libraryEvent in CurrentEvents)
            {
                <div data-event-link="@currentEventCount" class="@(currentEventCount == 0 ? "active" : "") item">
                    <img src="@libraryEvent.ImageURL" alt="">
                    <p class="event-title">@libraryEvent.EventName</p>
                    <p class="event-description">@libraryEvent.EventDescription</p>
                </div>
                currentEventCount = currentEventCount + 1;
            }
        } else
        {
            <h3>There are no events at this current time. Please check back later.</h3>
        }
    </div>
    <ul class="carousel-dots">
        <li data-event-link="0" class="active"><div></div></li>
        <li data-event-link="1"><div></div></li>
        <li data-event-link="2"><div></div></li>
        <li data-event-link="3"><div></div></li>
        <li data-event-link="4"><div></div></li>
    </ul>
    <div class="left-carousel-arrow">
        <div></div>
    </div>
    <div class="right-carousel-arrow">
        <div></div>
    </div>
</div>

