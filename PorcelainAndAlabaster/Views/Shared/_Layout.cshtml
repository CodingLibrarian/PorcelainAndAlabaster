                        </li>
                        <li class="">
                            <a class="" asp-area="" asp-controller="Admin" asp-action="Statistics">Statistics</a>
                        </li>
                        <li class="">
                            <a class="" asp-area="" asp-controller="Admin" asp-action="Weeding">Weeding</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div id="alert-banner"></div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PorcelainAndAlabaster - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
